<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".AdminLanding">

    <EditText
        android:id="@+id/admine"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Number"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminb2"
        app:layout_constraintVertical_bias="0.455" />

    <EditText
        android:id="@+id/admine2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Name to change"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminb2"
        app:layout_constraintVertical_bias="0.084" />

    <ImageView
        android:layout_width="261dp"
        android:layout_height="216dp"
        android:src="@drawable/admin"
        app:layout_constraintBottom_toTopOf="@+id/adminb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/adminb1"
        android:layout_width="122dp"
        android:layout_height="75dp"
        android:background="#ff9999"
        android:text="See Users"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <EditText
        android:id="@+id/admine1"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Number"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/adminb2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminb1"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/adminb2"
        android:layout_width="122dp"
        android:layout_height="75dp"
        android:background="#ff9999"
        android:text="Delete User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

    <Button
        android:id="@+id/adminb"
        android:layout_width="122dp"
        android:layout_height="75dp"
        android:background="#ff9999"
        android:text="Change Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />
</androidx.constraintlayout.widget.ConstraintLayout>